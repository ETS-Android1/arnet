<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0" >
    <cm:property-placeholder id="streamingProperties" persistent-id="org.opennms.oia.streaming.properties" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="wsPort" value="8081" />
        </cm:default-properties>
    </cm:property-placeholder>

    <bean id="websocketStreamer" class="org.opennms.oia.streaming.WebsocketStreamer" init-method="init">
        <argument value="${wsPort}"/>
    </bean>
</blueprint>